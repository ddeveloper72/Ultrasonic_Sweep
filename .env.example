# UAP Signal Generator - Environment Configuration
# =================================================

# Security Settings
# -----------------

# API Key for authentication (generate a strong random key)
# Leave empty to disable API key authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=

# CORS Allowed Origins (comma-separated list)
# Use * to allow all origins (NOT recommended for production)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=*

# Rate Limiting
# -------------

# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Default rate limit (requests per minute)
RATE_LIMIT_DEFAULT=60

# API endpoint rate limits (requests per minute)
RATE_LIMIT_GENERATE=5
RATE_LIMIT_UPLOAD=10
RATE_LIMIT_YOUTUBE=3

# Resource Limits
# ---------------

# Maximum concurrent signal generation tasks
MAX_CONCURRENT_TASKS=3

# Maximum uploaded music files in memory
MAX_MUSIC_FILES=10

# Task expiration time (seconds)
TASK_EXPIRATION=3600

# YouTube Configuration
# ---------------------

# YouTube cookies for bypassing bot detection (optional)
# Export your YouTube cookies.txt file, then paste the entire content here
# Use single-line format with \n for newlines, or use base64 encoding
# Example (Heroku): heroku config:set YOUTUBE_COOKIES="$(cat cookies.txt)" -a ultrasonic-sweep
YOUTUBE_COOKIES=

# Flask Configuration
# -------------------

# Debug mode (true/false) - NEVER enable in production
FLASK_DEBUG=false

# Secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=

# Heroku Configuration
# --------------------

# PORT is automatically set by Heroku
# PORT=5000

# Force single worker to avoid multi-worker memory issues
# WEB_CONCURRENCY=1

# FFmpeg path (Heroku buildpack will install FFmpeg)
# FFMPEG_PATH=/usr/bin/ffmpeg

# Application Settings
# --------------------

# Maximum file upload size (bytes) - 10MB default
MAX_CONTENT_LENGTH=10485760

# Upload folder path
UPLOAD_FOLDER=source_files

# Output folder path
OUTPUT_FOLDER=generated_signals

